  "scripts": {
    "build-css": "node-sass-chokidar public/assets/scss/ -o public/assets/css/",
    "watch-css": "npm run build-css && node-sass-chokidar public/assets/scss/ -o public/assets/css/ --recursive --output-style compressed --watch",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "server": "npm-run-all -p  webpack babel-node",
    "webpack": "webpack --watch",
    "build": "npm run build-css && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "babel-node": "nodemon --exec babel-node src/server/server.js --presets es2015,react,stage-2"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
